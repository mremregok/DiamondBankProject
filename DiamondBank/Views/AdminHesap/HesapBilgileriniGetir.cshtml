@model DiamondBank.Models.Entity.TBLHesap
@{
    ViewBag.Title = "HesapBilgileriniGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("HesapGuncelle", "AdminHesap", FormMethod.Post))
{
    <div class="form-group">
        Hesap ID
        @Html.TextBoxFor(h => h.HesapID, new { @class = "form-control" })
        <br />
        Müşteri ID
        @Html.TextBoxFor(h => h.MusteriID, new { @class = "form-control" })
        <br />
        Hesap Açılış Tarihi
        @Html.TextBoxFor(h => h.HesapAcilisTarihi, new { @class = "form-control" })
        <br />
        Aktiflik
        <select id="Aktiflik" name="Aktiflik" class="form-control">

            <option value=""></option>

            <option value="False">Kapalı</option>

            <option value="True">Açık</option>
        </select>
        <br />
        Mevduat
        @Html.TextBoxFor(h => h.MevduatMiktari, new { @class = "form-control" })
        <br />

    </div>

    <div>
        <button class="btn btn-primary">GÜNCELLE</button>
    </div>
}

